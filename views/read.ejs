<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">
        <div class="nav mb-6">
            <a class="text-blue-500" href="/">Back to Home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length == 0) { %>
                <div class="empty flex justify-center items-center w-full h-screen">
                    <h1 class="text-6xl text-center text-zinc-400">Oops! No User Yet..</h1>
                </div>
            <% } else { %>
                <% users.forEach((user) => { %>
                    <div class="user w-72 bg-zinc-800 p-4 rounded-lg">
                        <div class="w-full h-52 bg-zinc-100 rounded-lg overflow-hidden">
                            <img src="<%= user.image %>" class="w-full h-full object-cover" alt="<%= user.name %>">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex gap-3 mt-6">
                            <a class="text-zinc-100" href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                        </div>
                    </div>
                <% }) %>
           <% } %>
        </div>
    </div>
</body>
</html>
